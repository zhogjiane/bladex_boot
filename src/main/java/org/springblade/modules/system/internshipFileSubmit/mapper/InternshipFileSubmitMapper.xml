<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.modules.system.internshipFileSubmit.mapper.InternshipFileSubmitMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="internshipFileSubmitResultMap" type="org.springblade.modules.system.internshipFileSubmit.entity.InternshipFileSubmit">
        <id column="id" property="id"/>
        <result column="companyName" property="companyname"/>
        <result column="companyAddress" property="companyaddress"/>
        <result column="create_user" property="createUser"/>
        <result column="create_dept" property="createDept"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="remark" property="remark"/>
        <result column="filePath" property="filePath"/>
        <result column="internshipFileName" property="internshipFileName"/>
        <result column="dept_id" property="deptId"/>
    </resultMap>


    <select id="selectInternshipFileSubmitPage" resultMap="internshipFileSubmitResultMap">
        select * from internship_file_submit where is_deleted = 0
    </select>

    <select id="selectUserPage" resultType="org.springblade.modules.system.entity.User">
        SELECT
        *
        FROM
        blade_user
        WHERE
        is_deleted = 0
        AND dept_id = ( SELECT dept_id FROM blade_user WHERE is_deleted = 0 AND id = #{userId} )
        AND id &lt;&gt; #{userId}
        AND submit_status in (2,4,5,6)
    </select>

</mapper>
